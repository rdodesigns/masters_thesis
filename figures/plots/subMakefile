# This is to make the stupid expansion in clean work.
SHELL=/bin/bash

TEX=pdflatex

DOCUMENT:=$(shell find . -name "*\.tex" | cut -c 3- \
									| cut -d '.' -f 1)


#######################################################################
#                               Targets                               #
#######################################################################

${DOCUMENT}.pdf: ${DOCUMENT}.tex
	@echo "Making ${DOCUMENT}"
	${TEX} ${DOCUMENT}
